generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CacheEntry {
  key       String   @id @map("_id")
  value     String
  updatedAt DateTime @updatedAt
}

model Repository {
  // Corresponds to GitHub's id; necessary to keep as linkage to Qdrant
  id          Int    @id /// z.number().int().min(0) 
  owner       String /// z.string().min(1)
  name        String /// z.string().min(1)
  description String
  readme      String @db.VarChar(2000) /// z.string().min(0).max(2000)

  url                   String /// z.string().url()
  impactScore           Float /// z.number().float().positive().gte(0).lte(1)
  numStars              Int /// z.number().int().positive().gte(0)
  numIssues             Int /// z.number().int().positive().gte(0)
  lastActivityTimestamp DateTime
  topics                String[]

  updatedAt DateTime @default(now()) @updatedAt /// z.custom.omit([input])
}

enum SupportedSorts {
  IMPACT_SCORE
  STARS
}
